<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checkbox for marking task as completed -->
    <CheckBox
        android:id="@+id/taskCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp" />

    <!-- Task Name with TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskNameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:hint="Item">

        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Task"
            android:textSize="14sp"
            android:importantForAccessibility="yes"
            android:contentDescription="Task name"
            android:gravity="start|center_vertical"
            android:enabled="false"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Price Field with TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskPriceInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="Price">

        <EditText
            android:id="@+id/taskPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="0.00"
            android:textSize="14sp"
            android:gravity="end"
            android:importantForAccessibility="yes"
            android:contentDescription="Task price"
            android:paddingEnd="8dp"
            android:enabled="false"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Edit/Save Button -->
    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Edit task"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:src="@drawable/ic_edit"
        android:text=""
        android:textSize="14sp" />

    <!-- Save Button (hidden initially) -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginStart="8dp"
        android:visibility="gone" />

    <!-- Remove Button -->
    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
