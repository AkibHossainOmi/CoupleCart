<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checkbox for marking task as completed -->
    <CheckBox
        android:id="@+id/taskCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Task Name with TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskNameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Item">

        <EditText
            android:id="@+id/taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Task"
            android:textSize="16sp"
            android:importantForAccessibility="yes"
            android:contentDescription="Task name"
            android:gravity="start|center_vertical" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Price Field with TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/taskPriceInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:hint="Price">

        <EditText
            android:id="@+id/taskPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="0.00"
            android:textSize="14sp"
            android:gravity="end"
            android:importantForAccessibility="yes"
            android:contentDescription="Task price"
            android:paddingEnd="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Remove Button -->
    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:layout_marginStart="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
